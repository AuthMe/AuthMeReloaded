    </properties>

    <!-- Jenkins profile (add the real buildNumber to the version string) -->
    <profiles>
        <profile>
            <id>jenkins</id>
            <activation>
                <property>
                    <name>env.BUILD_NUMBER</name>
                </property>
            </activation>
